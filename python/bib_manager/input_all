"@article{TSANG2019533,
title = {Symmetry energy constraints from GW170817 and laboratory experiments},
journal = {Physics Letters B},
volume = {795},
pages = {533-536},
year = {2019},
issn = {0370-2693},
doi = {https://doi.org/10.1016/j.physletb.2019.06.059},
url = {https://www.sciencedirect.com/science/article/pii/S0370269319304423},
author = {M.B. Tsang and W.G. Lynch and P. Danielewicz and C.Y. Tsang},
keywords = {Equation of state, Neutron star merger, Skyrme interactions, Tidal polarizability, Gravitational waves, Heavy ion collisions},
abstract = {The LIGO-Virgo collaboration detection of the binary neutron-star merger event, GW170817, has expanded efforts to understand the Equation of State (EoS) of nuclear matter. These measurements provide new constraints on the overall pressure, but do not elucidate its origins, by not distinguishing the contribution to the pressure from symmetry energy which governs much of the internal structure of a neutron star. By combining the neutron star EoS extracted from the GW170817 event and the EoS of symmetric matter from nucleus-nucleus collision experiments, we extract the symmetry pressure, which is the difference in pressure between neutron and nuclear matter over the density region from 1.2Ï0 to 4.5Ï0. While the uncertainties in the symmetry pressure are large, they can be reduced with new experimental and astrophysical results.}
}"
